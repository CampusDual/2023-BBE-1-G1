<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="roles"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>id</Column>
    </UpdateKeys>
    <GeneratedKey>id</GeneratedKey>
    <Queries>
        <Query id="default">
            <ValidColumns>
                <Column>id</Column>
                <Column>rolename</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.roles
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="serverPermissions">
            <AmbiguousColumns>
                <AmbiguousColumn name="id" prefix="r" />
                <AmbiguousColumn name="id" prefix="sp" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
					SELECT
						#COLUMNS#
					FROM
						${mainschema}.roles r
						JOIN ${mainschema}.roles_server_permissions rsp ON r.id = rsp.role_id
						JOIN ${mainschema}.server_permissions sp ON rsp.server_permission_id = sp.id
					#WHERE#
					#ORDER#
					]]>
            </Sentence>
        </Query>
        <Query id="clientPermissions">
            <Sentence>
                <![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.roles r
					#WHERE#
					#ORDER#
					]]>
            </Sentence>
        </Query>
        <Query id="login">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM ${mainschema}.users
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="userRole">
            <AmbiguousColumns>
                <AmbiguousColumn name="id" prefix="u" />
                <AmbiguousColumn name="id" prefix="r" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.users u
						JOIN ${mainschema}.roles r ON u.role_id = r.id
					#WHERE#
					#ORDER#
					]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>